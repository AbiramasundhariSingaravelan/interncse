package calc;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.ResultSet;
import java.sql.SQLException;
import java.sql.Statement;

public class Database {

	public static void main(String[] args) throws SQLException {
		// TODO Auto-generated method stub
		Connection c=DriverManager.getConnection("jdbc:mysql://localhost:3306/demodatabase","root","arthi@123");
		Statement s=c.createStatement();
		ResultSet rs=s.executeQuery("select * from employee");
		while(rs.next())
		{
			System.out.println("ID:"+rs.getInt(1)+"NAME:"+rs.getString(2)+"Age:"+rs.getInt(3)+"Dept:"+rs.getString(4));
		}
		s.executeUpdate("insert into employee values(101,aa,28,'cse')");
	}

}
